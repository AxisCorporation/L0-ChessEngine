<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:L_0_Chess_Engine.ViewModels"
             xmlns:local="clr-namespace:L_0_Chess_Engine.Converters"
             x:DataType="vm:ChessBoardViewModel"
             x:Class="L_0_Chess_Engine.Views.ChessBoardView">
    
    <UserControl.Resources>
        <local:BoolToSquareColourConverter x:Key="BoolToSquareColorConverter" />
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock>Game View</TextBlock>
        
        <ItemsControl ItemsSource="{Binding GridPieces}">
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8" Columns="8" Width="400" Height="400"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding IsLightSquare, Converter={StaticResource BoolToSquareColorConverter}}"
                            BorderBrush="Black" BorderThickness="1" Width="50" Height="50">
                        
                        <Image Source="{Binding Image}" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            
        </ItemsControl>
    </StackPanel>
    
</UserControl>
