<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="L_0_Chess_Engine.Views.MainMenuView">

    <Border Background="#FF7D29" CornerRadius="20" Padding="30">
        <Grid>
            <StackPanel x:Name="MainMenu" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                <!-- Title -->
                <TextBlock Text="♔L-0 Chess♚"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#ECF0F1"
                           HorizontalAlignment="Center"/>

                <!-- Main Menu Options -->
                <StackPanel x:Name="MainMenuOptions" Spacing="5" HorizontalAlignment="Center">
                    <Button x:Name="PlayToggle" HorizontalContentAlignment="Center" Content="Play" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="10"/>
                    <Button x:Name="CreditsButton" HorizontalContentAlignment="Center" Content="Credits" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="10"/>
                    <Button x:Name="QuitButton" HorizontalContentAlignment="Center" Content="Quit" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="10"/>
                </StackPanel>

                <!-- Game Mode Selection -->
                <StackPanel x:Name="GameModeOptions" Spacing="10" HorizontalAlignment="Center" IsVisible="False">
                    <TextBlock Text="Game Mode" FontSize="28" FontWeight="Bold" Foreground="#ECF0F1" HorizontalAlignment="Center"/>
                    <Button x:Name="LocalGame" HorizontalContentAlignment="Center" Content="Local" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="8"/>
                    <Button x:Name="AiGame" HorizontalContentAlignment="Center" Content="AI" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="8"/>
                </StackPanel>

                <!-- Difficulty Options -->
                <StackPanel x:Name="DifficultyOptions" Spacing="10" HorizontalAlignment="Center" IsVisible="False">
                    <TextBlock Text="Choose AI Difficulty" FontSize="28" FontWeight="Bold" Foreground="#ECF0F1" HorizontalAlignment="Center"/>
                    <Button Content="Easy" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="8" Click="PlayAIGame"/>
                    <Button Content="Medium" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="8" Click="PlayAIGame"/>
                    <Button Content="Hard" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="200" Background="#FEEBC8" Foreground="Black" CornerRadius="8" Click="PlayAIGame"/>
                </StackPanel>

                <!-- Time Control -->
                <TextBlock Name="TimeOptionsText" Text="Time Options" FontSize="28" FontWeight="Bold" Foreground="#ECF0F1" HorizontalAlignment="Center"/>
                <StackPanel x:Name="TimeOptions" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center" IsVisible="False">
                    <ToggleButton Content="5 min" HorizontalContentAlignment="Center" Width="150" Background="#FEEBC8" Foreground="Black" CornerRadius="8" Click="TimeOptionSelected"/>
                    <ToggleButton Content="10 min" HorizontalContentAlignment="Center" Width="150" Background="#FEEBC8" Foreground="Black" CornerRadius="8" Click="TimeOptionSelected"/>
                    <ToggleButton Content="15 min" HorizontalContentAlignment="Center" Width="150" Background="#FEEBC8" Foreground="Black" CornerRadius="8" Click="TimeOptionSelected"/>
                </StackPanel>
            </StackPanel>

            <!-- Back Button (outside the main stack for fixed bottom positioning) -->
            <Button x:Name="BackButton"
                    Content="Back"
                    Width="100"
                    IsVisible="False"
                    Background="#FEEBC8"
                    Foreground="Black"
                    CornerRadius="10"
                    HorizontalAlignment="Center"
					HorizontalContentAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20">
            </Button>
        </Grid>
    </Border>
</UserControl>